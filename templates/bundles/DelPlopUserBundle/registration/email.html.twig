<link rel="stylesheet" href="https://www.tcg-seigneur-des-anneaux.fr/css/styles.css" />

<div class="w3-main">
    <div class="w3-row w3-padding-64 w3-container w3-padding-top-0">
        <h2 class="w3-text-amber">{{ ('general.welcome'|trans) }}</h2>

        <p>{{ ('registration.mail_text'|trans({'%login%': login}))|raw }}</p>

        <p>{{ ('password_reset.signature'|trans({'%site_url%': siteUrl, '%site_name%': siteName}))|raw }}</p>
    </div>

    <footer id="myFooter">
        <div class="w3-container w3-theme-l2 w3-padding-32">
            <h4>
                <img src="https://www.tcg-seigneur-des-anneaux.fr/img/logo_tolkien.png" alt="" /> &copy;
                <a href="{{ siteUrl }}" title="{{ siteName }}">{{ siteName }}</a>
            </h4>
        </div>
    </footer>
</div>
