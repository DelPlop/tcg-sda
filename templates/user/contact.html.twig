{% extends 'base.html.twig' %}
{% trans_default_domain 'cards' %}

{% block title %}{{ ('general.contact'|trans) }}{% endblock %}

{% block body %}
    <div class="w3-row w3-padding-64">
        <div class="w3-twothird w3-container">
            <h2 class="w3-text-amber">{{ ('fellowship.contact'|trans) }}</h2>
            <p>
                {{ ('general.hello_user'|trans({'%username%': app.user.login}))|raw }}<br /><br />

                {% if sent %}
                    {{ ('general.message_sent')|trans }}
                {% else %}
                    {% if user.id is not same as(app.user.id) %}
                        {{ ('general.contact_username'|trans({'%username%': user.login}))|raw }}
                        <br /><br />

                        {{ form_start(form) }}
                        <label class="no-label" for="user_contact_form_message">{{ ('general.enter_your_message')|trans }}</label><br />
                        {{ form_widget(form.message) }}<br />
                        {{ form_widget(form.valid_form) }}
                        {{ form_end(form) }}
                    {% else %}
                        {{ ('general.self_contact')|trans|raw }}
                    {% endif %}
                {% endif %}
            </p>
        </div>

        {{ render(controller(
            'App\\Controller\\StaticController::topRight'
        )) }}

        {{ render(controller(
            'App\\Controller\\StaticController::bottomRight'
        )) }}
    </div>
{% endblock %}
