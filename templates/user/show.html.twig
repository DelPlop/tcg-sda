{% extends 'base.html.twig' %}
{% trans_default_domain 'cards' %}

{% block title %}Ma fiche{% endblock %}

{% block body %}
    <div class="w3-row w3-padding-64">
        <div class="w3-twothird w3-container">
            <h2 class="w3-text-amber">Ma fiche</h2>
            <p>
                Pour montrer vos listes à vos amis, n'hésitez pas à leur donner directement les liens suivants :
                <br /><br />
                <a href="{{ path('user_owned_cards', {user: user.id}) }}">Voir mes cartes</a><br />
                <a href="{{ path('user_wanted_cards', {user: user.id}) }}">Voir mes recherches</a><br />
            </p>
        </div>

        {{ render(controller(
            'App\\Controller\\StaticController::topRight'
        )) }}

        <div class="w3-twothird w3-container">
            <h2 class="w3-text-amber">Mes informations</h2>
            <p>
                Vous pouvez modifier vos informations ci-dessous :<br />
                {{ form_start(form) }}
                    <label class="inline" for="password">Mot de passe</label> {{ form_widget(form.plainPassword) }}<br />
                    <label class="inline" for="email">E-mail</label> {{ form_widget(form.email) }}<br />
                    {{ form_widget(form.valid_form) }}
                {{ form_end(form) }}
            </p>
        </div>

        {{ render(controller(
            'App\\Controller\\StaticController::bottomRight'
        )) }}
    </div>
{% endblock %}
